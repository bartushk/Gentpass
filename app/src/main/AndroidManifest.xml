<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bartushk.gentpass"
    android:versionCode="3"
    android:versionName="1.2" >

    <uses-sdk android:minSdkVersion="7" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".core.GentPassApp"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".ui.LoginScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.NewUserScreen"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ui.PasswordScreen"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ui.NewPasswordScreen"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ui.GenerateOptionsScreen"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ui.GenerateTouchScreen"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>